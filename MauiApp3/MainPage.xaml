<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- StackLayout, içerisindeki öğeleri dikeyde sıralar -->
    <StackLayout Spacing="30" Padding="30" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <!-- Öğrencinin Profil Resmi -->
        <Frame BackgroundColor="Black" BorderColor="#BDBDBD" CornerRadius="75" Padding="5" HasShadow="True" HorizontalOptions="Center">
            <!-- Profil resmi, Image öğesi ile ekleniyor -->
            <Image Source="profilresmi.jpg" 
                   HorizontalOptions="Center" 
                   HeightRequest="150" 
                   WidthRequest="150"
                   Aspect="AspectFill"/>
        </Frame>

        <!-- Öğrencinin Adı ve Soyadı -->
        <Frame BackgroundColor="#2C3E50" CornerRadius="10" Padding="15" HasShadow="True">
            <!-- Öğrencinin adı, Label öğesi ile ekleniyor -->
            <Label Text=" Berk Uyar" 
                   FontSize="26" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   VerticalOptions="CenterAndExpand"/>
        </Frame>
        <Frame BackgroundColor="#2C3E50" CornerRadius="10" Padding="15" HasShadow="True">
             
            <Label Text=" Bartın Üniversitesi Bilgisayar Mühendisliği" 
           FontSize="26" 
           FontAttributes="Bold"
           HorizontalOptions="Center"
           TextColor="White"
           VerticalOptions="CenterAndExpand"/>
        </Frame>
    </StackLayout>

</ContentPage>
